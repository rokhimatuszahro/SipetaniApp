<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true" >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/beranda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewBeranda"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="40dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/pemesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Pesan Tiket Anda disini!"
                android:textColor="@color/colorBlack"
                android:textSize="21dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.506"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/tglBerkunjung"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="40dp"
                android:padding="10dp"
                android:background="@drawable/roundedcorner"
                android:gravity="center"
                android:hint="Tanggal Berkunjung"
                android:textAllCaps="false"
                android:textColor="@color/colorHint"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pemesanan" />

            <EditText
                android:id="@+id/jumTiket"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/roundedcorner"
                android:gravity="center"
                android:hint="Masukkan Jumlah Tiket"
                android:inputType="number"
                android:textColorHint="@color/colorHint"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="@+id/tglBerkunjung"
                app:layout_constraintStart_toStartOf="@+id/tglBerkunjung"
                app:layout_constraintTop_toBottomOf="@+id/tglBerkunjung" />

            <Button
                android:id="@+id/btnpesan"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btncolor"
                android:text="Pesan Sekarang"
                android:textColor="@color/colorHint"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/jumTiket"
                app:layout_constraintStart_toStartOf="@+id/jumTiket"
                app:layout_constraintTop_toBottomOf="@+id/jumTiket" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/roundedcornertop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create with Undraw.com dan  Flaticon.com"
        android:textColor="@color/colorHint"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewBeranda"
        app:layout_constraintVertical_bias="0.9" />


</androidx.constraintlayout.widget.ConstraintLayout>